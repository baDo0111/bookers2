<body>
<h1>Editing Book</h1>

  <% if @book.errors.any? %>
    <div class = "alert_alert-warning">
      <h2>2 errors prohibited this book from being saved:</h2>
        <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
<%= form_for(@book) do |f| %>
  <div class="field">Title</div>
  <%= f.text_field :title, class: "book_title"%>
  <div class="field">Body</div>
  <%= f.text_area :body, class: "book_body" %>
  <div class="actions"><%= f.submit 'Update Book'%></div>
<% end %>
  <%= link_to "show", book_path(@book) %>
  |
  <a class="Back" href="/books">Back</a>

</body>