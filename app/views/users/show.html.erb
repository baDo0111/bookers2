<div class="container">
<div class="row">
  <div class="col-xs-3">
    <%= render 'users/info',{user: @user} %>
    <%= render 'books/side',{book:@book, user:current_user} %>
  </div>

  <div class="col-xs-9">
    <table class="table">
      <h1>Books</h1>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <% @books.each do |book| %>
        <tbody>
          <tr>
              <td>
                <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
              </td>
              <td>
                <%=link_to book.title, book, class: "book_#{book.id}" %>
              </td>
              <td>
                <%= book.body %>
              </td>
        <% end %>
          </tr>
        </tbody>
    </table>
  </div>
</div>