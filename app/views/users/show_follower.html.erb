<h1>Follower Users</h1>
<% if @user.followers.count == 0 %>
	<div>ユーザーはいません</div>
<% else %>
  <table class="table">
          <thead>
            <tr>
              <th>Image</th>
              <th>name</th>
            </tr>
          </thead>

          <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                 <div><%= attachment_image_tag user, :profile_image, :fill, 10, 10, fallback: "no_image.jpg"%></div>
              </td>
              <td><%= user.name %></td>
              <td>フォロー数：<%= user.following.count %></td>
              <td>フォロワー数：<%= user.followers.count %></td>
              <td>
                <%= link_to "Show",user_path(user.id), class: "user_#{user.id}" %>
              </td>
            </tr>
          </tbody>
          <% end %>
  </table>
<% end %>